<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
</head>

<body>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
    <div class="container">
        <a href="/post">
            <h2>자유게시판</h2>
        </a>
        <% if(session.is_logined) { %>
            <%=session.user_id%>님 안녕하세요.
            <form action="/logout" method="GET">
                <input type="submit" class="btn btn-primary" value="로그아웃">
            </form>
        <% } else { %>
        <form action="/auth" method="post">
            <div>
                <label>Username:</label>
                <input type="아이디:" name="id" />
            </div>
            <div>
                <label>Password:</label>
                <input type="비밀번호:" name="pw" />
            </div>
            <div>
                <input type="submit" class="btn btn-primary" value="로그인" />
            </div>
        </form>
        <form action="/sign_up?_method=PATCH" method="post">
            <input type="submit" class="btn btn-primary" value="회원가입">
        </form>
        <% } %>
        <table class="table text-center">
            <thead>
                <form action="/post" method="POST">
                    <div class="form-group">
                        <label>제목</label>
                        <input type="text" class="form-control" name="title" placeholder="제목">
                    </div>

                    <div class="form-group">
                        <label>내용</label>
                        <textarea name="contents" class="form-control" placeholder="내용"></textarea>
                    </div>
                    <tr>
                        <th class="text-center">번호</th>
                        <th class="text-center">제목</th>
                        <th class="text-center">작성자</th>
                        <th class="text-center">등록일시</th>
                        <input type="submit" class="btn btn-primary" value="등록" />
                    </tr>
                </form>
            </thead>
            <tbody>
                <% var i = 1 %>
                <% result.forEach((val) => {  %>
                <tr>
                    <td><%= i %></td>
                    <%i+=1%>
                    <td><a href=/post/<%= val.id %>><%= val.title %></a></td>
                    <td><%= val.writer%></td>
                    <td><%= moment(val.date).locale("ko").fromNow() %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>